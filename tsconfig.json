{
	"version": "2.0.0",
	"compilerOptions": {
		"declaration": false,
		"module": "umd",
		"noImplicitAny": true,
		"outDir": "_build/",
		"baseUrl": "node_modules",
		"paths": {
			"dojo-core/*": [
				"dojo-core/dist/umd/*"
			],
			"dojo-has/*": [
				"dojo-has/*"
			],
			"dojo-shim/*": [
				"dojo-shim/dist/umd/*"
			]
		},
		"removeComments": false,
		"sourceMap": true,
		"target": "es5",
		"moduleResolution": "node"
	},
	"include": [
		"./typings/index.d.ts",
		"./src/**/*.ts",
		"./tests/**/*.ts"
	]
}
